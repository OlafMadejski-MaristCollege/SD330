        <button onclick="toggleImage()">View Fridge</button>
      </div>
 

      <script>
        function toggleImage() {
          var img = document.getElementById("myImage");
          if (img.style.display === "none") {
            img.style.display = "block";
          } else {
            img.style.display = "none";
          }
        }
      </script>

    



    <script>

    
        function updateTempUp() {
          // Get the current number
          var currentNumber = parseInt(document.getElementById("desiredTemp").innerHTML);
        
          // Add 1 to the current number
          var newNumber = currentNumber + 1;
        
          // Update the number in the division
          document.getElementById("desiredTemp").innerHTML = newNumber;
        }
    
        function updateTempDown() {
          // Get the current number
          var currentNumber = parseInt(document.getElementById("desiredTemp").innerHTML);
    
          // Subtract 1 to the current number
          var newNumber = currentNumber - 1;
    
          // Update the number in the division
          document.getElementById("desiredTemp").innerHTML = newNumber;
        }

          // Play music function
          function playMusic() {
          var audio = document.getElementById("myMusic");
          audio.play();
         }
        
          // Turn fridge on/off
         function OnOFF() {
         var body = document.querySelector('body');
         body.classList.toggle('green');
         }

