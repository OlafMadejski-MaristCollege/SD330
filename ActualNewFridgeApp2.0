          <script>
            setInterval(function() {
              var now = new Date();
              var hours = now.getHours();
              var minutes = now.getMinutes();
              var seconds = now.getSeconds();
              var timeOutput = hours + ':' + minutes + ':' + seconds;
            document.getElementById('time').textContent = timeOutput;
            }, 1000); 
